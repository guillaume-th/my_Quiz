{% extends 'base_admin.html.twig' %}

{% block title %}Statistiques
{% endblock %}

{% block body %}
	{% block header %}
		{{parent()}}
	{% endblock %}

	<div class="wrapper">
		<h1>Statistiques</h1>
 <img src="https://quickchart.io/chart?c={type:'bar',data:{labels:['dernier 24h','Une Semaine', 'Un Mois', 'Cette Annee'], datasets:[{label:'Nombre De Quiz fait',data:[ {{ label.0 }}, {{ label.1 }}, {{ label.2 }}, {{ label.3 }}]},{label:'nombre de visiteur',data:[ {{ visiteur.0 }}, {{ visiteur.1 }}, {{ visiteur.2 }}, {{ visiteur.3 }}]}]},options:{plugins:{datalabels:{formatter: (value) => {return value;}}}}}">
		<h2>Score global des quizz</h2>
 <img src="https://quickchart.io/chart?c={type:'bar',data:{labels:{{ categorie }}, datasets:[{label:'Score global du quiz',data:{{ quizzgraphe }}}]},options:{plugins:{datalabels:{formatter: (value) => {return value;}}}}}">
		<br>
	{% for quiz in quizz %}
	<p>{{ quiz }}</p><br>
	{% endfor %}
	</div>
{% endblock %}
